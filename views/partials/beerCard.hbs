<div class='col-md-4'>
  <div class='card'>
    <img class='card-img-top' src='{{this.image_url}}' alt='{{this.name}}' />
    <div class='card-body'>
      <h5 class='card-title'>{{this.name}} </h5>
      <p class='card-text'>{{this.description}}</p>
      <p class='card-text'>{{this.tagline}}</p>
      <div>
        <p>Averages</p>
        <div>
          {{#each average}}
            <p>Year: {{year}}</p>
            <p>Points: {{points}}</p>
          {{/each}}
        </div>
      </div>
    </div>
  </div>
</div>